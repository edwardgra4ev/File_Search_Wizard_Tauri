{
	"build": {
		"beforeDevCommand": "yarn dev",
		"beforeBuildCommand": "yarn build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist"
	},
	"package": {
		"productName": "file_search_wizard",
		"version": "0.0.0"
	},
	"tauri": {
		"allowlist": {
			"http": {
				"all": true,
				"request": true,
				"scope": [
					"https://git.gra4evserver.ru/api/v1/repos/gra4ev/File_Search_Wizard_Tauri/releases/latest"
				]
			},
			"all": false,
			"dialog": {
				"open": true
			},
			"fs": {
				"readDir": true,
				"readFile": true,
				"scope": ["**", "**/*", "/**/*"]
			},
			"path": {
				"all": true
			}
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "com.tauri.dev",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			]
		},
		"security": {
			"csp": null
		},
		"windows": [
			{
				"fullscreen": false,
				"resizable": true,
				"title": "file_search_wizard",
				"width": 800,
				"height": 600
			}
		]
	}
}
